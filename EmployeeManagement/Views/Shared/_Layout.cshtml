<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
@Styles.Render("~/Content/css")
@Styles.Render("~/Content/Layout.css")



<body>
    <div class="topnav">

        <ul class="ul">
            <li class="li"><h4 style="color:deeppink">Employee Database</h4></li>
            <li class="li">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="li">@Html.ActionLink("About", "About", "Home")</li>
            <li class="li">@Html.ActionLink("Contact", "Contact", "Home")</li>
        </ul>

    </div>

    <div>
        @RenderBody()


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/javascript")
    @RenderSection("scripts", required: false)
</body>
</html>
